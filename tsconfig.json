{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tapioca-sdk/*": ["gitmodule/tapioca-sdk/src/*"],
      "@typechain/*": ["gen/typechain/*"],
      "@tap-token/config":["lib/tap-token/tasks/deploy/DEPLOY_CONFIG.ts"],
      "@tapioca-bar/config":["lib/tapioca-bar/tasks/deploy/DEPLOY_CONFIG.ts"],
      "@tap-yieldbox/config":["lib/tap-yieldbox/tasks/deploy/DEPLOY_CONFIG.ts"],
      "@tapiocaz/config":["lib/tapiocaz/tasks/deploy/DEPLOY_CONFIG.ts"],
    }
  },
  "include": [
    "./hardhat.config.ts",
    "./hardhat_scripts",
    "./test_hardhat",
    "./gen/typechain",
    "./tasks",
    "./deploy"
  ]
}
